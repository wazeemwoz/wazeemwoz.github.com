
{% for post in paginator.posts limit:3 %}
    <div class="overflow thin_post">
        <div class="thin_date">{{ post.date | date: "%d/%m/%y" }} </div>
        <a href="{{ post.url }}">
            <h1 class="thin_title">{{ post.title }}</h1>
        </a>
        <ul class="compact tags">
        {% for tag in post.tags %}
            <li class="tag archive_list"><a class="tag_list_link" href="/tag/{{ tag }}">{{ tag }}</a></li>
        {% endfor %}
        </ul>
    </div>
{% endfor %}      
